    <ul>
        {% for order in orders %}
            <li>
                Pedido #{{ order.id }} - {{ order.status }} - {{ order.orderDate|date('d/m/Y') }}
                (<a href="{{ path('order_show', {'id': order.id}) }}">ver detalle</a>)
            </li>
